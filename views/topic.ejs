<!doctype html>
<html>
  <head>
    <title><%=forumName%> - Topic</title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
  </head>
  <body>
    <h1><%=forumName%></h1>
    <h2>Topic</h2>
    <p>Topic: <%= topic.topic_title%></p>
    <p>Description: <%= topic.topic_description%></p>
    <p></p>
    <table>
      <tr><th>Username</th><th>First name</th><th>Surname</th><th>Country</th></tr>
      <% users.forEach(function(user) { %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.firstname %></td>
          <td><%= user.surname %></td>
          <td><%= user.country %></td>
        </tr>
      <% }) %>    
    </table>    
  </body>
</html>